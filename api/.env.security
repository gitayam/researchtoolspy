# Security Configuration for Production
# Copy these settings to your .env file for production deployment

# Security Settings
ENABLE_MOCK_AUTH=false
REQUIRE_HTTPS=true
ENABLE_SECURITY_HEADERS=true
ENABLE_RATE_LIMITING=true
MAX_REQUESTS_PER_MINUTE=60

# CORS Configuration (Production)
BACKEND_CORS_ORIGINS=https://yourdomain.com,https://www.yourdomain.com

# Trusted Hosts (Production) 
ALLOWED_HOSTS=yourdomain.com,www.yourdomain.com

# Environment
ENVIRONMENT=production

# Secret Key (Generate a new one for production!)
# SECRET_KEY=your-secure-secret-key-here-never-use-default

# Database (Use secure PostgreSQL for production)
DATABASE_URL=postgresql://username:password@host:port/database
POSTGRES_SERVER=your-postgres-server
POSTGRES_USER=secure_username
POSTGRES_PASSWORD=secure_password
POSTGRES_DB=researchtools_prod

# Redis (For sessions and caching)
REDIS_HOST=your-redis-server
REDIS_PASSWORD=secure_redis_password

# External Services (Use environment-specific keys)
OPENAI_API_KEY=your-openai-api-key

# Cloudflare Tunnel (Development only - remove in production)
# CLOUDFLARE_TUNNEL_URL=https://your-tunnel.trycloudflare.com
# CLOUDFLARE_TUNNEL_HOST=your-tunnel.trycloudflare.com

# Logging
LOG_LEVEL=INFO

# Email (For security notifications)
SMTP_HOST=your-smtp-server
SMTP_USER=your-email@domain.com
SMTP_PASSWORD=your-email-password
EMAILS_FROM_EMAIL=security@yourdomain.com